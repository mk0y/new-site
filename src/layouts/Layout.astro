---
// Supports weights 300-700
import "@fontsource-variable/quicksand";
import Header from "../components/Header.astro";
import TopHeader from "../components/TopHeader.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  description?: string;
  title?: string;
  type?: "white" | "black" | "dark";
}

const { description, title, type = "white" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="index, follow" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {title ? title : import.meta.env.PUBLIC_SITE_NAME} - {
        import.meta.env.PUBLIC_SITE_TITLE
      }
    </title>
  </head>
  <body>
    <TopHeader type={type} />
    <Header type={type} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    font-family: "Quicksand Variable", sans-serif;
  }
</style>

<script>
  // Add backdrop blur to header on scroll
  const header = document.querySelector("header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header?.classList.add("scrolled");
    } else {
      header?.classList.remove("scrolled");
    }
  });
</script>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
</style>
