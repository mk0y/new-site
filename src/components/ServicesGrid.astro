---
import { getCurrentLang, getCurrentTranslations } from "../utils";

const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
---

<section class="py-24 bg-white relative z-10">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center mb-16">
      <span class="text-primary-1a mb-4 block"
        >{i18nData.common.innovative}</span
      >
      <h2 class="text-4xl md:text-5xl font-bold text-gray-a mb-6">
        {i18nData.common.servicesHeadline}
      </h2>
      <p class="text-gray-a/80 max-w-3xl mx-auto">
        {i18nData.common.servicesSubheadline}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Software Development -->
      <div
        class="group relative overflow-hidden rounded-xl bg-white border border-gray-200 p-6 hover:border-primary-1a transition-all duration-300 hover:shadow-xl"
      >
        <div class="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=3540&auto=format&fit=crop"
            alt="Software Development"
            class="w-full h-full object-cover opacity-5 group-hover:opacity-10 transition-opacity duration-300"
          />
        </div>
        <div class="relative z-10">
          <div class="h-12 w-12 mb-4 text-primary-1a">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-a mb-3">
            {i18nData.common.softwareDevelopment}
          </h3>
          <p class="text-gray-a/70 text-sm mb-4">
            {i18nData.common.softwareDevelopmentDesc}
          </p>
          <a
            href="/services/software-development"
            class="inline-flex items-center text-primary-1a hover:text-primary-1b transition-colors"
          >
            {i18nData.common.learnMore}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- IT Consulting -->
      <div
        class="group relative overflow-hidden rounded-xl bg-white border border-gray-200 p-6 hover:border-primary-1a transition-all duration-300 hover:shadow-xl"
      >
        <div class="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=3540&auto=format&fit=crop"
            alt="IT Consulting"
            class="w-full h-full object-cover opacity-5 group-hover:opacity-10 transition-opacity duration-300"
          />
        </div>
        <div class="relative z-10">
          <div class="h-12 w-12 mb-4 text-primary-1a">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 0 0 2.25-2.25V6.75a2.25 2.25 0 0 0-2.25-2.25H6.75A2.25 2.25 0 0 0 4.5 6.75v10.5a2.25 2.25 0 0 0 2.25 2.25Zm.75-12h9v9h-9v-9Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-a mb-3">
            {i18nData.common.itConsulting}
          </h3>
          <p class="text-gray-a/70 text-sm mb-4">
            {i18nData.common.itConsultingDesc}
          </p>
          <a
            href="/services/it-consulting"
            class="inline-flex items-center text-primary-1a hover:text-primary-1b transition-colors"
          >
            {i18nData.common.learnMore}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Nearshoring -->
      <div
        class="group relative overflow-hidden rounded-xl bg-white border border-gray-200 p-6 hover:border-primary-1a transition-all duration-300 hover:shadow-xl"
      >
        <div class="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=3540&auto=format&fit=crop"
            alt="Nearshoring"
            class="w-full h-full object-cover opacity-5 group-hover:opacity-10 transition-opacity duration-300"
          />
        </div>
        <div class="relative z-10">
          <div class="h-12 w-12 mb-4 text-primary-1a">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-a mb-3">
            {i18nData.common.nearshoring}
          </h3>
          <p class="text-gray-a/70 text-sm mb-4">
            {i18nData.common.nearshoringDesc}
          </p>
          <a
            href="/services/nearshoring"
            class="inline-flex items-center text-primary-1a hover:text-primary-1b transition-colors"
          >
            {i18nData.common.learnMore}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- AI Solutions -->
      <div
        class="group relative overflow-hidden rounded-xl bg-white border border-gray-200 p-6 hover:border-primary-1a transition-all duration-300 hover:shadow-xl"
      >
        <div class="absolute inset-0 z-0">
          <img
            src="https://images.unsplash.com/photo-1677442136019-21780ecad095?q=80&w=3540&auto=format&fit=crop"
            alt="AI Solutions"
            class="w-full h-full object-cover opacity-5 group-hover:opacity-10 transition-opacity duration-300"
          />
        </div>
        <div class="relative z-10">
          <div class="h-12 w-12 mb-4 text-primary-1a">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-a mb-3">
            {i18nData.common.aiSolutions}
          </h3>
          <p class="text-gray-a/70 text-sm mb-4">
            {i18nData.common.aiSolutionsDesc}
          </p>
          <a
            href="/services/ai-solutions"
            class="inline-flex items-center text-primary-1a hover:text-primary-1b transition-colors"
          >
            {i18nData.common.learnMore}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
