---
import { Image } from "@unpic/astro";
import type { ImageMetadata } from 'astro';
import { getCurrentLang, getCurrentTranslations } from "../utils";

interface ServiceCard {
  title: string;
  description: string;
  link: {
    text: string;
    href: string;
  };
  image?: ImageMetadata;
}

interface Props {
  cards: ServiceCard[];
}

const { cards } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {cards.map((card) => (
        <div class="group relative flex flex-col bg-white border border-gray-200 rounded-xl p-6 hover:border-primary-1a transition-all duration-300 hover:shadow-xl">
          {card.image && (
              <Image
                src={card.image}
                alt={card.title}
                class="w-full h-64 object-cover opacity-85 aspect-3/4 group-hover:opacity-100 rounded-t-[12px] transition-opacity duration-300"
              />
          )}
          <div class="relative z-10">
            <h3 class="text-xl font-semibold text-gray-a mb-3">
              {card.title}
            </h3>
            <p class="text-gray-a/70 text-sm mb-4">
              {card.description}
            </p>
            <a
              href={card.link.href}
              class="inline-flex items-center text-primary-1a hover:text-primary-1b transition-colors"
            >
              {card.link.text}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 ml-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 