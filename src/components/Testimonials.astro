---
import { getCurrentLang, getCurrentTranslations } from "../utils";

const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
const testimonials = i18nData.common.testimonials.items;
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-a mb-6">
        {i18nData.common.testimonials.title}
      </h2>
      <p class="text-lg text-gray-a/80">
        {i18nData.common.testimonials.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        testimonials.map((testimonial) => (
          <div class="bg-white p-8 rounded-xl border border-gray-200 hover:border-primary-1a transition-colors">
            <div class="flex mb-6">
              {[...Array(5)].map(() => (
                <svg
                  class="w-5 h-5 text-primary-1a"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <blockquote class="text-gray-a mb-6">
              "{testimonial.text}"
            </blockquote>
            <div class="flex items-center">
              <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center text-primary-1a">
                {testimonial.author.charAt(0)}
              </div>
              <div class="ml-4">
                <div class="font-semibold text-gray-a">
                  {testimonial.author}
                </div>
                <div class="text-sm text-gray-a/60">{testimonial.position}</div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
