      0 25px 50px -12px rgba(0, 0, 0, 0.35),
      0 0 50px -12px rgba(0, 0, 0, 0.25);
    position: relative;
  }

  .mega-menu::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at top,
      rgba(63, 207, 141, 0.05),
      transparent 70%
    );
    pointer-events: none;
    border-radius: 0.5rem;
  }

  .mega-menu a {
    position: relative;
    transition: all 0.2s ease;
  }

  .mega-menu a:hover {
    transform: translateX(4px);
  }

  .mega-menu a::after {
    content: "";
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: #3fcf8d;
    transition: width 0.2s ease;
  }

  .mega-menu a:hover::after {
