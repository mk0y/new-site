---
interface Props {
  mainTitle: string;
  benefits: {
    title: string;
    description: string;
    ctaText: string;
    ctaHref: string;
  }[];
}

const { mainTitle, benefits } = Astro.props;
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-16 max-w-4xl">
      {mainTitle}
    </h2>

    <div class="grid md:grid-cols-3 gap-12">
      {
        benefits.map((benefit) => (
          <div class="space-y-4">
            <div class="w-12 h-12 text-primary-1a">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M12.378 1.602a.75.75 0 0 0-.756 0L3 6.632l9 5.25 9-5.25-8.622-5.03ZM21.75 7.93l-9 5.25v9l8.628-5.032a.75.75 0 0 0 .372-.648V7.93ZM11.25 22.18v-9l-9-5.25v8.57a.75.75 0 0 0 .372.648l8.628 5.033Z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold">{benefit.title}</h3>
            <p class="text-gray-a text-lg">{benefit.description}</p>
            <a
              href={benefit.ctaHref}
              class="inline-flex items-center text-lg font-medium hover:text-primary-1a transition-colors"
            >
              {benefit.ctaText}
              <svg
                class="w-4 h-4 ml-2"
                viewBox="0 0 16 16"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M6 12L10 8L6 4"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
