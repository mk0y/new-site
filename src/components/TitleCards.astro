---
import { getCurrentLang, getCurrentTranslations } from "../utils";

const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);

interface TitleCardsProps {
  title: string;
  description: string;
  card1: { title: string; description: string; image: string };
  card2: { title: string; description: string; image: string };
  card3: { title: string; description: string; image: string };
}

const { title, card1, card2, card3 } = Astro.props;
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <!-- Title -->
    <h2
      class="text-3xl md:text-4xl lg:text-5xl font-bold text-center text-gray-a mb-20 max-w-5xl mx-auto"
    >
      {title}
    </h2>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Card 1 -->
      <div class="flex flex-col items-center text-center">
        <div class="mb-6 w-full">
          <div class="image-container mb-6 mx-auto overflow-hidden rounded-lg">
            <img
              src={card1.image}
              alt={card1.title}
              class="w-full h-48 object-cover transform transition-transform duration-300 hover:scale-110"
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-a mb-4">
            {card1.title}
          </h3>
          <p class="text-gray-a/80 mb-6">
            {card1.description}
          </p>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="flex flex-col items-center text-center">
        <div class="mb-6 w-full">
          <div class="image-container mb-6 mx-auto overflow-hidden rounded-lg">
            <img
              src={card2.image}
              alt={card2.title}
              class="w-full h-48 object-cover transform transition-transform duration-300 hover:scale-110"
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-a mb-4">
            {card2.title}
          </h3>
          <p class="text-gray-a/80 mb-6">
            {card2.description}
          </p>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="flex flex-col items-center text-center">
        <div class="mb-6 w-full">
          <div class="image-container mb-6 mx-auto overflow-hidden rounded-lg">
            <img
              src={card3.image}
              alt={card3.title}
              class="w-full h-48 object-cover transform transition-transform duration-300 hover:scale-110"
            />
          </div>
          <h3 class="text-2xl font-bold text-gray-a mb-4">
            {card3.title}
          </h3>
          <p class="text-gray-a/80 mb-6">
            {card3.description}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  h2 {
    font-feature-settings:
      "ss01" on,
      "ss02" on;
    line-height: 1.2;
  }

  h3 {
    line-height: 1.3;
  }

  .image-container {
    width: 100%;
    max-width: 400px;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2rem;
    }
    h3 {
      font-size: 1.5rem;
    }
  }
</style>
