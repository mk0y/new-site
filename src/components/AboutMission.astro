---
interface Props {
  subtitle: string;
  title: string;
  description: string;
  learnMoreText: string;
  contactText: string;
}

const { subtitle, title, description, learnMoreText, contactText } =
  Astro.props;
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-2 gap-12 items-start">
      <div class="space-y-4">
        <p class="text-lg text-primary-1a">{subtitle}</p>
        <h2 class="text-4xl md:text-5xl font-bold">
          {title}
        </h2>
      </div>
      <div class="space-y-8">
        <p class="text-lg text-gray-a">
          {description}
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="/about/learn-more"
            class="inline-block px-6 py-3 border border-white-borders text-black font-medium rounded hover:bg-gray-50 transition-colors"
          >
            {learnMoreText}
          </a>
          <a
            href="/contact"
            class="inline-flex items-center text-lg font-medium hover:text-primary-1a transition-colors group"
          >
            {contactText}
            <svg
              class="w-4 h-4 ml-2 transform transition-transform group-hover:translate-x-1"
              viewBox="0 0 16 16"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M6 12L10 8L6 4"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
