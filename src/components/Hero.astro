---
// import { Image } from "astro:assets";
import { Image } from "@unpic/astro";
import bgHome from "../assets/bg-home.jpg";
---

<section class="hero">
  <div class="hero-background">
    <Image
      src={bgHome}
      width={bgHome.width}
      height={bgHome.height}
      alt="Hero Background"
      class="hero-image"
    />
  </div>
  <div class="hero-content">
    <h1>Building AI-Powered<br />Web Solutions</h1>
    <p>
      We craft innovative web applications enhanced by artificial intelligence,
      helping businesses transform their digital presence and achieve
      unprecedented growth.
    </p>
    <div class="cta-buttons">
      <button class="primary">Get Started</button>
      <button class="secondary">Learn More</button>
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    height: 100vh;
    color: white;
    display: flex;
    align-items: center;
    padding: 0 8%;
    position: relative;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* z-index: -1; */
  }

  .hero-background::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.7) 75%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 1;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: #1a1a1a;
    animation: loaded 1s ease;
  }

  @keyframes loaded {
    0% {
      filter: blur(10px);
      transform: scale(1.1);
    }
    100% {
      filter: blur(0);
      transform: scale(1);
    }
  }

  .hero-content {
    max-width: 600px;
    position: relative;
    z-index: 2;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1.5rem 0;
  }

  p {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-weight: 400;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
  }

  button {
    padding: 0.8rem 1.8rem;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .primary {
    background-color: white;
    color: #1a1a1a;
    border: none;
  }

  .primary:hover {
    background-color: #f0f0f0;
  }

  .secondary {
    background-color: transparent;
    color: white;
    border: 1px solid white;
  }

  .secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
</style>
