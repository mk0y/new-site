---
// import { Image } from "astro:assets";
import { Image } from "@unpic/astro";
import bgAi from "../assets/bg-ai.jpg";
import bgFintech from "../assets/bg-fintech.jpg";
import bgHome from "../assets/bg-home.jpg";
import bgMedtech from "../assets/bg-medtech.jpg";
---

<section class="hero">
  <div class="hero-background">
    <div class="carousel">
      <div class="carousel-slide" data-index="0">
        <Image
          src={bgHome}
          width={bgHome.width}
          height={bgHome.height}
          alt="Hero Background"
          class="hero-image"
        />
      </div>
      <div class="carousel-slide" data-index="1">
        <Image
          src={bgAi}
          width={bgAi.width}
          height={bgAi.height}
          alt="AI integrations"
          class="hero-image"
        />
      </div>
      <div class="carousel-slide" data-index="2">
        <Image
          src={bgMedtech}
          width={bgMedtech.width}
          height={bgMedtech.height}
          alt="Digital health"
          class="hero-image"
        />
      </div>
      <div class="carousel-slide" data-index="3">
        <Image
          src={bgFintech}
          width={bgFintech.width}
          height={bgFintech.height}
          alt="Fintech"
          class="hero-image"
        />
      </div>
    </div>
  </div>
  <div class="hero-content">
    <h1>Building AI-Powered<br />Web Solutions</h1>
    <p>
      We craft innovative web applications enhanced by artificial intelligence,
      helping businesses transform their digital presence and achieve
      unprecedented growth.
    </p>
    <div class="cta-buttons">
      <button class="primary">Get Started</button>
      <button class="secondary">Learn More</button>
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    height: 100vh;
    color: white;
    display: flex;
    align-items: center;
    padding: 0 8%;
    position: relative;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-background::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.6) 45%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 2;
  }

  .carousel {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    will-change: opacity, transform;
    transform: translateZ(0) scale(1);
    backface-visibility: hidden;
    perspective: 1000px;
    transition:
      opacity 0.8s ease-in-out,
      transform 2s ease-in-out;
  }

  .carousel-slide.active {
    opacity: 1;
    transform: translateZ(0) scale(1.05);
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: #1a1a1a;
    animation: loaded 1s ease;
  }

  @keyframes loaded {
    0% {
      filter: blur(10px);
      transform: scale(1.1);
    }
    100% {
      filter: blur(0);
      transform: scale(1);
    }
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 600px;
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1.5rem 0;
  }

  p {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    font-weight: 400;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
  }

  button {
    padding: 0.8rem 1.8rem;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .primary {
    background-color: white;
    color: #1a1a1a;
    border: none;
  }

  .primary:hover {
    background-color: #f0f0f0;
  }

  .secondary {
    background-color: transparent;
    color: white;
    border: 1px solid white;
  }

  .secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
</style>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll(".carousel-slide");
  const totalSlides = slides.length;

  function showSlide(index: number) {
    slides.forEach((slide) => {
      slide.classList.remove("active");
    });
    slides[index].classList.add("active");
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % totalSlides;
    showSlide(currentSlide);
  }

  // Initialize first slide
  showSlide(0);

  // Start the carousel
  setInterval(nextSlide, 6000);
</script>
