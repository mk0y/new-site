---
import Container from "./Container.astro";

interface Props {
  title: string;
  description: string;
  applyButtonText: string;
  learnMoreButtonText: string;
}

const { title, description, applyButtonText, learnMoreButtonText } = Astro.props;
---

<section class="py-20 md:py-28">
  <Container>
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-gray-a mb-8">
        {description}
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/careers/apply"
          class="inline-block px-6 py-3 bg-primary-1a text-white font-medium rounded hover:bg-primary-1b transition-colors"
        >
          {applyButtonText}
        </a>
        <a
          href="/careers/about"
          class="inline-block px-6 py-3 border border-[#CCCCCC] text-black font-medium rounded hover:bg-gray-50 transition-colors"
        >
          {learnMoreButtonText}
        </a>
      </div>
    </div>
  </Container>
</section> 