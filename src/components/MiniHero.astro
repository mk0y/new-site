---
interface Props {
  title: string;
  description: string;
  backgroundImage: ImageMetadata;
  altText?: string;
}

import { Image } from "@unpic/astro";
import Breadcrumbs from "./Breadcrumbs.astro";
import Container from "./Container.astro";
const { title, description, backgroundImage, altText = "" } = Astro.props;
---

<div class="relative w-full h-[300px] md:h-[400px] overflow-hidden">
  <div class="absolute inset-0 z-0">
    <Image
      src={backgroundImage}
      alt={altText}
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gray-d/80"></div>
  </div>

  <div
    class="relative z-10 container mx-auto px-4 h-full flex flex-col justify-center items-center"
  >
    <div class="max-w-2xl flex flex-col items-center text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-white-text">
        {description}
      </p>
    </div>
  </div>
</div>

<Container class="my-8">
  <Breadcrumbs />
</Container>