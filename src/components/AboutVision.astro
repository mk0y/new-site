---
interface Props {
  subtitle: string;
  title: string;
  description: string;
  contactText: string;
  consultingText: string;
}

const { subtitle, title, description, contactText, consultingText } =
  Astro.props;
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <p class="text-lg text-primary-1a mb-4">{subtitle}</p>
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        {title}
      </h2>
      <p class="text-lg text-gray-a mb-8">
        {description}
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="/contact"
          class="inline-block px-6 py-3 border border-white-borders text-black font-medium rounded hover:bg-gray-50 transition-colors"
        >
          {contactText}
        </a>
        <a
          href="/consulting"
          class="inline-flex items-center text-lg font-medium hover:text-primary-1a transition-colors group"
        >
          {consultingText}
          <svg
            class="w-4 h-4 ml-2 transform transition-transform group-hover:translate-x-1"
            viewBox="0 0 16 16"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M6 12L10 8L6 4"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
