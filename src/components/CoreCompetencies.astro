---
import Cube from "../icons/Cube.astro";
import { getCurrentLang, getCurrentTranslations } from "../utils";

const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <!-- Title -->
    <h2
      class="text-3xl md:text-4xl lg:text-5xl font-bold text-center text-gray-a mb-20 max-w-5xl mx-auto"
    >
      {i18nData.common.coreCompetencies.title}
    </h2>

    <!-- Cards Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Card 1 -->
      <div class="flex flex-col items-center text-center">
        <div class="mb-6">
          <div class="w-12 h-12 mb-6 mx-auto">
            <Cube class="w-full h-full text-primary-1a" />
          </div>
          <h3 class="text-2xl font-bold text-gray-a mb-4">
            {i18nData.common.coreCompetencies.card1.title}
          </h3>
          <p class="text-gray-a/80 mb-6">
            {i18nData.common.coreCompetencies.card1.description}
          </p>
        </div>
        <div class="mt-auto">
          <a
            href="/services"
            class="inline-flex items-center text-gray-a hover:text-primary-1a transition-colors"
          >
            {i18nData.common.coreCompetencies.card1.cta}
            <svg class="w-5 h-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="flex flex-col items-center text-center">
        <div class="mb-6">
          <div class="w-12 h-12 mb-6 mx-auto">
            <Cube class="w-full h-full text-primary-1a" />
          </div>
          <h3 class="text-2xl font-bold text-gray-a mb-4">
            {i18nData.common.coreCompetencies.card2.title}
          </h3>
          <p class="text-gray-a/80 mb-6">
            {i18nData.common.coreCompetencies.card2.description}
          </p>
        </div>
        <div class="mt-auto">
          <a
            href="/contact"
            class="inline-flex items-center text-gray-a hover:text-primary-1a transition-colors"
          >
            {i18nData.common.coreCompetencies.card2.cta}
            <svg class="w-5 h-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="flex flex-col items-center text-center">
        <div class="mb-6">
          <div class="w-12 h-12 mb-6 mx-auto">
            <Cube class="w-full h-full text-primary-1a" />
          </div>
          <h3 class="text-2xl font-bold text-gray-a mb-4">
            {i18nData.common.coreCompetencies.card3.title}
          </h3>
          <p class="text-gray-a/80 mb-6">
            {i18nData.common.coreCompetencies.card3.description}
          </p>
        </div>
        <div class="mt-auto">
          <a
            href="/projects"
            class="inline-flex items-center text-gray-a hover:text-primary-1a transition-colors"
          >
            {i18nData.common.coreCompetencies.card3.cta}
            <svg class="w-5 h-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  h2 {
    font-feature-settings:
      "ss01" on,
      "ss02" on;
    line-height: 1.2;
  }

  h3 {
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2rem;
    }
    h3 {
      font-size: 1.5rem;
    }
  }
</style>
