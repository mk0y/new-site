---
import { Image } from "@unpic/astro";
import type { ImageMetadata } from 'astro';

interface Benefit {
  title: string;
  description: string;
}

interface Props {
  mainTitle: string;
  description: string;
  benefits: Benefit[];
  image: ImageMetadata;
}

const { mainTitle, description, benefits, image } = Astro.props;
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4 md:px-6">
    <div class="grid md:grid-cols-2 gap-12 items-start">
      <div class="space-y-8">
        <div class="space-y-4">
          <h2 class="text-4xl font-bold text-gray-c">
            {mainTitle}
          </h2>
          <p class="text-gray-a/80">
            {description}
          </p>
        </div>
        <div class="space-y-8 flex gap-4">
          {benefits.map((benefit) => (
            <div class="space-y-2">
              <h3 class="text-xl font-semibold text-gray-c">
                {benefit.title}
              </h3>
              <p class="text-gray-a/70">
                {benefit.description}
              </p>
            </div>
          ))}
        </div>
      </div>
      <div class="relative">
        <Image
          src={image}
          alt={mainTitle}
          class="w-full h-full object-cover rounded-lg"
        />
      </div>
    </div>
  </div>
</section> 