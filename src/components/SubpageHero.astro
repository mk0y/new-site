---
import { Image } from "@unpic/astro";
import bg from "../assets/bg-nearshoring.jpg";
import { getCurrentLang, getCurrentTranslations } from "../utils";

interface Props {
  tag?: string;
  title: string;
  description: string;
}

const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);

const { tag = "Effizienz", title, description } = Astro.props;
---

<section class="relative min-h-[50vh] flex items-center overflow-hidden">
  <!-- Background image with gradient overlay -->
  <div class="absolute inset-0 z-0">
    <Image
      src={bg}
      width={bg.width}
      height={bg.height}
      alt={title}
      class="w-full h-full object-cover"
    />
    <div
      class="absolute inset-0 bg-gradient-to-r from-gray-d via-gray-c to-gray-b opacity-60"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="container relative z-10 mx-auto px-4 md:px-6 py-20">
    <div class="max-w-3xl">
      <!-- Tag -->
      <div class="text-primary-1a mb-6">{tag}</div>

      <!-- Title -->
      <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
        {title}
      </h1>

      <!-- Description -->
      <p class="text-lg text-white/80">
        {description}
      </p>

      <!-- Buttons -->
      <div class="flex gap-4 mt-8">
        <a
          href="/contact"
          class="inline-flex items-center px-6 py-3 rounded-lg bg-white hover:bg-gray-100 text-gray-900 transition-colors"
        >
          {i18nData.common.learnMore}
        </a>
        <a
          href="/contact"
          class="inline-flex items-center px-6 py-3 rounded-lg border-2 border-white text-white hover:bg-white hover:text-gray-900 transition-all"
        >
          {i18nData.common.contact}
        </a>
      </div>
    </div>
  </div>
</section>
