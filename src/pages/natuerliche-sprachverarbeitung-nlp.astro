---
import heroSoftwareDev from "../assets/hero-software-dev.jpg";
import BenefitsOverview from "../components/BenefitsOverview.astro";
import FAQ from "../components/FAQ.astro";
import MiniHero from "../components/MiniHero.astro";
import SimpleMission from "../components/SimpleMission.astro";
import SimpleSplitTextImage from "../components/SimpleSplitTextImage.astro";
import SimpleSplitTextImageReverse from "../components/SimpleSplitTextImageReverse.astro";
import TitleCards from "../components/TitleCards.astro";
import Layout from "../layouts/Layout.astro";
import { getCurrentLang, getCurrentTranslations } from "../utils";
const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
---

<Layout
  title="Natural Language Processing (NLP) - NearUp"
  description="We offer natural language processing (NLP) services, so you can focus on your core business."
  type="black"
>
  <MiniHero
    title={i18nData.naturalLanguageProcessing.main}
    description={i18nData.naturalLanguageProcessing.heroDescription}
    backgroundImage={heroSoftwareDev}
  />
  <SimpleMission
    subtitle={i18nData.naturalLanguageProcessing.mission.subtitle}
    title={i18nData.naturalLanguageProcessing.mission.title}
    description={i18nData.naturalLanguageProcessing.mission.description}
    learnMoreText={i18nData.naturalLanguageProcessing.mission.learnMoreText}
    contactText={i18nData.naturalLanguageProcessing.mission.contactText}
  />
  <TitleCards
    title={i18nData.naturalLanguageProcessing.titleCards.title}
    card1={i18nData.naturalLanguageProcessing.titleCards.card1}
    card2={i18nData.naturalLanguageProcessing.titleCards.card2}
    card3={i18nData.naturalLanguageProcessing.titleCards.card3}
  />
  <BenefitsOverview
    mainTitle={i18nData.naturalLanguageProcessing.benefits.title}
    description={i18nData.naturalLanguageProcessing.benefits.description}
    benefits={i18nData.naturalLanguageProcessing.benefits.benefits}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImageReverse
    title={i18nData.naturalLanguageProcessing.benefitsOverview.title}
    description={i18nData.naturalLanguageProcessing.benefitsOverview.description}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImage
    title={i18nData.naturalLanguageProcessing.benefitsOverview2.title}
    description={i18nData.naturalLanguageProcessing.benefitsOverview2.description}
    image={heroSoftwareDev}
  />
  <FAQ
    title={i18nData.naturalLanguageProcessing.faq.title}
    items={i18nData.naturalLanguageProcessing.faq.questions}
  />
</Layout>
