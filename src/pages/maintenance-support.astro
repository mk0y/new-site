---
import heroSoftwareDev from "../assets/hero-software-dev.jpg";
import BenefitsOverview from "../components/BenefitsOverview.astro";
import FAQ from "../components/FAQ.astro";
import MiniHero from "../components/MiniHero.astro";
import SimpleMission from "../components/SimpleMission.astro";
import SimpleSplitTextImage from "../components/SimpleSplitTextImage.astro";
import SimpleSplitTextImageReverse from "../components/SimpleSplitTextImageReverse.astro";
import TitleCards from "../components/TitleCards.astro";
import Layout from "../layouts/Layout.astro";
import { getCurrentLang, getCurrentTranslations } from "../utils";
const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
---

<Layout
  title="Maintenance & Support - NearUp"
  description="We offer maintenance & support services, so you can focus on your core business."
  type="black"
>
  <MiniHero
    title={i18nData.softwareDevelopment.main}
    description={i18nData.softwareDevelopment.heroDescription}
    backgroundImage={heroSoftwareDev}
  />
  <SimpleMission
    subtitle={i18nData.softwareDevelopment.mission.subtitle}
    title={i18nData.softwareDevelopment.mission.title}
    description={i18nData.softwareDevelopment.mission.description}
    learnMoreText={i18nData.softwareDevelopment.mission.learnMoreText}
    contactText={i18nData.softwareDevelopment.mission.contactText}
  />
  <TitleCards
    title={i18nData.softwareDevelopment.titleCards.title}
    card1={i18nData.softwareDevelopment.titleCards.card1}
    card2={i18nData.softwareDevelopment.titleCards.card2}
    card3={i18nData.softwareDevelopment.titleCards.card3}
  />
  <BenefitsOverview
    mainTitle={i18nData.softwareDevelopment.benefits.title}
    description={i18nData.softwareDevelopment.benefits.description}
    benefits={i18nData.softwareDevelopment.benefits.benefits}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImageReverse
    title={i18nData.softwareDevelopment.benefitsOverview.title}
    description={i18nData.softwareDevelopment.benefitsOverview.description}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImage
    title={i18nData.softwareDevelopment.benefitsOverview2.title}
    description={i18nData.softwareDevelopment.benefitsOverview2.description}
    image={heroSoftwareDev}
  />
  <FAQ
    title={i18nData.softwareDevelopment.faq.title}
    items={i18nData.softwareDevelopment.faq.questions}
  />
</Layout>
