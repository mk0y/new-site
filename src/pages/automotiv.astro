---
import imgautomotive from "../assets/bg-healthcare.jpg";
import healthImg from "../assets/health-digital.jpg";
import pharmaImg from "../assets/pharma-service.jpg";
import successImg from "../assets/success-health.jpg";
import BenefitsOverview from "../components/BenefitsOverview.astro";
import MiniHero from "../components/MiniHero.astro";
import QuickContact from "../components/QuickContact.astro";
import ServiceCards from "../components/ServiceCards.astro";
import SimpleTitleVision from "../components/SimpleTitleVision.astro";
import TextImageSplit from "../components/TextImageSplit.astro";
import Layout from "../layouts/Layout.astro";
import { getCurrentLang, getCurrentTranslations } from "../utils";
const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);

const serviceCards = [
  {
    title: i18nData.automotive.services.consulting.title,
    description: i18nData.automotive.services.consulting.description,
    link: i18nData.automotive.services.consulting.link,
    image: pharmaImg,
  },
  {
    title: i18nData.automotive.services.integration.title,
    description: i18nData.automotive.services.integration.description,
    link: i18nData.automotive.services.integration.link,
    image: healthImg,
  },
  {
    title: i18nData.automotive.services.success.title,
    description: i18nData.automotive.services.success.description,
    link: i18nData.automotive.services.success.link,
    image: successImg,
  },
];

const benefits = [
  {
    title: i18nData.automotive.services.benefits.efficiency.title,
    description: i18nData.automotive.services.benefits.efficiency.description,
  },
  {
    title: i18nData.automotive.services.benefits.connectivity.title,
    description: i18nData.automotive.services.benefits.connectivity.description,
  },
];

const processSections = i18nData.automotive.process.sections;
---

<Layout title="Automotiv - NearUp" description="..." type="black">
  <MiniHero
    title={i18nData.automotive.main}
    description={i18nData.automotive.heroDescription}
    backgroundImage={imgautomotive}
  />
  <ServiceCards cards={serviceCards} />
  <TextImageSplit
    sections={processSections}
    image={healthImg}
    imageAlt={i18nData.automotive.process.title}
  />
  <BenefitsOverview
    mainTitle={i18nData.automotive.services.benefits.title}
    description={i18nData.automotive.services.benefits.description}
    benefits={benefits}
    image={pharmaImg}
  />
  <SimpleTitleVision
    subtitle={i18nData.common.precision}
    title={i18nData.automotive.services.vision.title}
    description={i18nData.automotive.services.vision.description}
    contactText={i18nData.common.learnMore}
    consultingText={i18nData.common.contact}
  />
  <QuickContact
    title={i18nData.contact.title}
    mainTitle={i18nData.contact.mainTitle}
    description={i18nData.contact.description}
    email={i18nData.contact.email}
    phone={i18nData.contact.phone}
    office={i18nData.contact.office}
  />
</Layout>
