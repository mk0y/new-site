---
import Layout from "../layouts/Layout.astro";
import MiniHero from "../components/MiniHero.astro";
import { getCurrentLang, getCurrentTranslations } from "../utils";
import heroSoftwareDev from "../assets/hero-software-dev.jpg";
import SimpleMission from "../components/SimpleMission.astro";
import TitleCards from "../components/TitleCards.astro";
import BenefitsOverview from "../components/BenefitsOverview.astro";
import SimpleSplitTextImage from "../components/SimpleSplitTextImage.astro";
import SimpleSplitTextImageReverse from "../components/SimpleSplitTextImageReverse.astro";
import FAQ from "../components/FAQ.astro";
const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
---

<Layout title="Software Development - NearUp" description="..." type="black">
  <MiniHero
    title={i18nData.mobileAppDevelopment.main}
    description={i18nData.mobileAppDevelopment.heroDescription}
    backgroundImage={heroSoftwareDev}
  />
  <SimpleMission
    subtitle={i18nData.mobileAppDevelopment.mission.subtitle}
    title={i18nData.mobileAppDevelopment.mission.title}
    description={i18nData.mobileAppDevelopment.mission.description}
    learnMoreText={i18nData.mobileAppDevelopment.mission.learnMoreText}
    contactText={i18nData.mobileAppDevelopment.mission.contactText}
  />
  <TitleCards
    title={i18nData.mobileAppDevelopment.titleCards.title}
    card1={i18nData.mobileAppDevelopment.titleCards.card1}
    card2={i18nData.mobileAppDevelopment.titleCards.card2}
    card3={i18nData.mobileAppDevelopment.titleCards.card3}
  />
  <BenefitsOverview
    mainTitle={i18nData.mobileAppDevelopment.benefits.title}
    description={i18nData.mobileAppDevelopment.benefits.description}
    benefits={i18nData.mobileAppDevelopment.benefits.benefits}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImageReverse
    title={i18nData.mobileAppDevelopment.benefitsOverview.title}
    description={i18nData.mobileAppDevelopment.benefitsOverview.description}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImage
    title={i18nData.mobileAppDevelopment.benefitsOverview2.title}
    description={i18nData.mobileAppDevelopment.benefitsOverview2.description}
    image={heroSoftwareDev}
  />
  <FAQ
    title={i18nData.mobileAppDevelopment.faq.title}
    items={i18nData.mobileAppDevelopment.faq.questions}
  />
</Layout>
