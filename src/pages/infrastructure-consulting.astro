---
import heroSoftwareDev from "../assets/hero-software-dev.jpg";
import BenefitsOverview from "../components/BenefitsOverview.astro";
import FAQ from "../components/FAQ.astro";
import MiniHero from "../components/MiniHero.astro";
import SimpleMission from "../components/SimpleMission.astro";
import SimpleSplitTextImage from "../components/SimpleSplitTextImage.astro";
import SimpleSplitTextImageReverse from "../components/SimpleSplitTextImageReverse.astro";
import TitleCards from "../components/TitleCards.astro";
import Layout from "../layouts/Layout.astro";
import { getCurrentLang, getCurrentTranslations } from "../utils";
const currentLang = getCurrentLang(Astro.url.host);
const i18nData = await getCurrentTranslations(currentLang);
---

<Layout
  title="Infrastructure Consulting - NearUp"
  description="We offer infrastructure consulting services, so you can focus on your core business."
  type="black"
>
  <MiniHero
    title={i18nData.infrastructureConsulting.main}
    description={i18nData.infrastructureConsulting.heroDescription}
    backgroundImage={heroSoftwareDev}
  />
  <SimpleMission
    subtitle={i18nData.infrastructureConsulting.mission.subtitle}
    title={i18nData.infrastructureConsulting.mission.title}
    description={i18nData.infrastructureConsulting.mission.description}
    learnMoreText={i18nData.infrastructureConsulting.mission.learnMoreText}
    contactText={i18nData.infrastructureConsulting.mission.contactText}
  />
  <TitleCards
    title={i18nData.infrastructureConsulting.titleCards.title}
    card1={i18nData.infrastructureConsulting.titleCards.card1}
    card2={i18nData.infrastructureConsulting.titleCards.card2}
    card3={i18nData.infrastructureConsulting.titleCards.card3}
  />
  <BenefitsOverview
    mainTitle={i18nData.infrastructureConsulting.benefits.title}
    description={i18nData.infrastructureConsulting.benefits.description}
    benefits={i18nData.infrastructureConsulting.benefits.benefits}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImageReverse
    title={i18nData.infrastructureConsulting.benefitsOverview.title}
    description={i18nData.infrastructureConsulting.benefitsOverview.description}
    image={heroSoftwareDev}
  />
  <SimpleSplitTextImage
    title={i18nData.infrastructureConsulting.benefitsOverview2.title}
    description={i18nData.infrastructureConsulting.benefitsOverview2.description}
    image={heroSoftwareDev}
  />
  <FAQ
    title={i18nData.infrastructureConsulting.faq.title}
    items={i18nData.infrastructureConsulting.faq.questions}
  />
</Layout>
